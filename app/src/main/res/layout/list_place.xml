<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/small_5dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="@dimen/large_16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_place"
            android:layout_width="@dimen/no_width"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:contentDescription="@string/desc_img_image"
            android:scaleType="centerCrop"
            tools:src="@drawable/les_bateaux_mouches" />

        <TextView
            android:id="@+id/tv_place_name"
            android:layout_width="@dimen/no_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/medium_8dp"
            android:layout_weight="2"
            android:padding="@dimen/medium_8dp"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            tools:text="Place name" />

    </LinearLayout>


</androidx.cardview.widget.CardView>